{
  "name": "@gs0428/toast",
  "version": "0.0.5",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:toast && bun run build:types",
    "build:toast": "bun build lib/index.ts lib/styles/index.css --outdir dist --minify --external react --external react-dom",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "zustand": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
